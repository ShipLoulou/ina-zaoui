{% extends 'front.html.twig' %}

{% block front %}
	<div class="row">
		<div class="col-12">
			<h3 class="mb-5">Invités</h3>
			<div class="guests d-flex flex-column">
				{% for guest in arrayMediaPerGuest %}
					<div class="guest py-5 d-flex justify-content-between align-items-center">
						<h4>{{ guest.user.name }}
							({{ guest.numberMedia }})</h4>
						<a href="{{ path('guest', {id: guest.user.id}) }}">découvrir</a>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
